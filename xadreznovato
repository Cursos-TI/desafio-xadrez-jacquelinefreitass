#include <stdio.h>

int main() {

    const int CASAS_TORRE = 5;
    const int CASAS_BISPO = 5;
    const int CASAS_RAINHA = 8;

    int i; 
    int j;
    int k;

    printf("### SIMULAÇÃO DE MOVIMENTOS DE XADREZ ###\n\n");
    printf("--- Movimento da TORRE (Loop 'for') ---\n");

    for (i = 0; i < CASAS_TORRE; i++) {
        printf("Direita\n");
    }

    printf("\n"); 
    printf("--- Movimento do BISPO (Loop 'while') ---\n");

    j = 0; 

    while (j < CASAS_BISPO) {
        printf("Cima, Direita\n");
        
        j++; 
    }

    printf("\n"); 

    printf("--- Movimento da RAINHA (Loop 'do-while') ---\n");

    k = 0;

    do {
        printf("Esquerda\n");
        
 
        k++;
        
    } while (k < CASAS_RAINHA); // A condição é verificada no final

    printf("\n"); // Separador

    printf("### FIM DA SIMULAÇÃO ###\n");

    return 0;
}
